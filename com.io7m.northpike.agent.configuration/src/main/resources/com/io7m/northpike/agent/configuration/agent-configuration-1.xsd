<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
            xmlns:ac="urn:com.io7m.northpike.agent.configuration:1"
            targetNamespace="urn:com.io7m.northpike.agent.configuration:1">

  <xsd:simpleType name="SharedKeyType">
    <xsd:annotation>
      <xsd:documentation>
        The type of shared agent keys.
      </xsd:documentation>
    </xsd:annotation>

    <xsd:restriction base="xsd:string">
      <xsd:pattern value="[a-f0-9]{64}"/>
    </xsd:restriction>
  </xsd:simpleType>

  <xsd:element name="Configuration">
    <xsd:annotation>
      <xsd:documentation>
        The main configuration element.
      </xsd:documentation>
    </xsd:annotation>

    <xsd:complexType>
      <xsd:attribute name="RemoteServer"
                     type="xsd:string"
                     use="required">
        <xsd:annotation>
          <xsd:documentation>
            The address of the remote server.
          </xsd:documentation>
        </xsd:annotation>
      </xsd:attribute>

      <xsd:attribute name="RemotePort"
                     type="xsd:unsignedShort"
                     use="required">
        <xsd:annotation>
          <xsd:documentation>
            The port of the remote server.
          </xsd:documentation>
        </xsd:annotation>
      </xsd:attribute>

      <xsd:attribute name="UseTLS"
                     type="xsd:boolean"
                     use="required">
        <xsd:annotation>
          <xsd:documentation>
            Set to true if TLS should be used to connect to the server.
          </xsd:documentation>
        </xsd:annotation>
      </xsd:attribute>

      <xsd:attribute name="SharedKey"
                     type="ac:SharedKeyType"
                     use="required">
        <xsd:annotation>
          <xsd:documentation>
            The shared key used to identify this agent.
          </xsd:documentation>
        </xsd:annotation>
      </xsd:attribute>

      <xsd:attribute name="MessageSizeLimit"
                     type="xsd:unsignedInt"
                     use="optional">
        <xsd:annotation>
          <xsd:documentation>
            The optional message size limit.
          </xsd:documentation>
        </xsd:annotation>
      </xsd:attribute>
    </xsd:complexType>
  </xsd:element>

</xsd:schema>
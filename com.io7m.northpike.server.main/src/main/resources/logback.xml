<?xml version="1.0" encoding="UTF-8" ?>

<configuration xmlns="http://ch.qos.logback/xml/ns/logback"
               debug="false">
  <appender name="STDERR"
            class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>northpike: %logger{128}: %level: %msg%n</pattern>
    </encoder>
    <target>System.err</target>
  </appender>

  <logger name="com.github.dockerjava"
          level="ERROR"/>
  <logger name="org.testcontainers"
          level="ERROR"/>
  <logger name="com.zaxxer.hikari"
          level="ERROR"/>
  <logger name="com.io7m.blackthorne"
          level="INFO"/>

  <logger name="org.jooq"
          level="INFO"/>

  <logger name="org.eclipse.jgit.internal.storage.file"
          level="INFO"/>

  <root level="TRACE">
    <appender-ref ref="STDERR"/>
  </root>

</configuration>
